@model IEnumerable<K22CNT3_LEVANHOANG_PROJECT2.Models.GioHangPj2>

@{
    ViewBag.Title = "Index";
}

<h2>Lê Văn Hoàng - Giỏ hàng</h2>

<p>
    <button type="button" class="btn" onclick="location.href='@Url.Action("Create")'">Thêm mới</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaGioHang)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayThem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KhachHangPj2.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SanPhamPj2.TenSP)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaGioHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SoLuong)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayThem)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrangThai)
        @{
            if (item.TrangThai == 0)
            {
                <span class="text-warning">Không hoạt động</span>
            }
            else if (item.TrangThai == 1)
            {
                <span class="text-success">Đang hoạt động</span>
            }
            else
            {
                <span class="text-info">Tài khoản không tồn tại</span>
            }
        }
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.KhachHangPj2.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.SanPhamPj2.TenSP)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaGioHang }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaGioHang }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaGioHang }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
