@model IEnumerable<K22CNT3_LEVANHOANG_PROJECT2.Models.KhachHangPj2>

@{
    ViewBag.Title = "Index";
}

<h2>Lê Văn Hoàng - Khách hàng</h2>

<p>
    <button type="button" class="btn" onclick="location.href='@Url.Action("Create")'">Thêm mới</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaKH)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaiKhoan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MatKhau)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgaySinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayCapNhat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GioiTinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TrangThai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaKH)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.HoTen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TaiKhoan)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MatKhau)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiaChi)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DienThoai)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgaySinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NgayCapNhat)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GioiTinh)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TrangThai)
        @{
            if (item.TrangThai == 0)
            {
                <span class="text-warning">Đã mua sản phẩm</span>
            }
            else if (item.TrangThai == 1)
            {
                <span class="text-success">Chưa mua sanr phẩm nào</span>
            }
            
        }

    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.MaKH }, new { @class = "btn btn-success" }) |
        @Html.ActionLink("Details", "Details", new { id = item.MaKH }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.MaKH }, new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
